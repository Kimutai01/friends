

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">email</th>
      <th scope="col">phone</th>
      <th scope="col">twitter</th>
      <th scope="col">Edit</th>
      <th scope="col">Back</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td><%= link_to "Edit this friend", edit_friend_path(friend), class:"btn btn-secondary" %></td>
      <td><%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %></td>
      <td><%= button_to "Destroy this friend", friend, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-secondary" %></td>
      
    </tr>
  </tbody>
</table>
